<h2 class="title">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <br>
  <div class="field">
    <%= f.label :email, class: 'label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-small", style: 'width:200px' %>
  </div>

  <br>
  <div class="field">
    <%= f.label :password, class: 'label' %>
    <%= f.password_field :password, autocomplete: "current-password", class: "input is-small", style: 'width:200px' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field checkbox">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Entrar", class: 'button is-primary' %>
  </div>
<% end %>
<br>
<%= render "devise/shared/links" %>
