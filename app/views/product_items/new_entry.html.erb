<h1 class="title">Registra Entrada de Lote</h1>

<%= form_with url: product_items_entry_path do |form| %>
  <div>
    <%= form.label :quantity, 'Quantidade', class: "label" %>
    <%= form.number_field :quantity, min: '1', class: "input is-small", style: 'width:200px' %>
  </div>
  <br>
  <div>
    <%= form.label :product_model_id, 'Produto', class: "label" %>
    <%= form.collection_select :product_model_id, @product_models, :id, :name,
                               {}, class: "select" %>
  </div>
  <br>
  <div>
    <%= form.label :warehouse_id, 'GalpÃ£o de Destino', class: "label" %>
    <%= form.select :warehouse_id, options_from_collection_for_select(@warehouses, :id, :code),
                                   {}, class: "select" %>
  </div>
  <br>
  <div>
    <%= form.submit 'Confirmar', class: "button is-primary" %>
  </div>
<% end%>
