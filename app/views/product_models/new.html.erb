<h1>Cadastrar modelo de produto</h1>

<%= form_with model: @product_model do |f| %>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :weight %>
    <%= f.number_field :weight %>
  </div>
  <div>
    <%= f.label :height %>
    <%= f.number_field :height %>
  </div>
  <div>
    <%= f.label :width %>
    <%= f.number_field :width %>
  </div>
  <div>
    <%= f.label :length %>
    <%= f.number_field :length %>
  </div>
  <div>
    <%= f.label :product_category_id %>
    <%= f.collection_select :product_category_id, @product_categories, :id, :name %>
  </div>
  <div>
    <%= f.label :supplier_id %>
    <%= f.collection_select :supplier_id, @suppliers, :id, :fantasy_name %>
  </div>
  <div>
    <%= f.submit 'Gravar' %>
  </div>
<% end %>
