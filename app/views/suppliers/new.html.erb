<h1>Cadastrar novo fornecedor</h1>

<% if @supplier.errors.any? %>
  <span>Verifique os erros abaixo:</span>
  <ul>
    <% @supplier.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end%>
  </ul>
<% end %>

<%= form_with model: @supplier do |form| %>
  <div>
    <%= form.label :fantasy_name %>
    <%= form.text_field :fantasy_name %>
  </div>
  <div>
    <%= form.label :legal_name %>
    <%= form.text_field :legal_name %>
  </div>
  <div>
    <%= form.label :cnpj %>
    <%= form.text_field :cnpj %>
  </div>
  <div>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>
  <div>
    <%= form.label :address %>
    <%= form.text_field :address %>
  </div>
  <div>
    <%= form.label :phone %>
    <%= form.text_field :phone %>
  </div>
  <div>
    <%= form.submit 'Gravar' %>
  </div>
<% end %>